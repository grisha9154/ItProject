@using ItProject.Models.ArticleModels
@model StepModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Article);
    int i = 1;
}
<h2>UpdateStep</h2>
<div class="row">
    <div class="col">
        <form action="~/Manage/UpdateStep" method="post">
            <div class="form-group">
                <h3>
                    Name:
                </h3>
                <input name="Name" type="text" value="@Model.Name" />
                <input type="hidden" name="Id" value="@Model.Id">
            </div>
            <div class="form-group">
                <h3>
                    Description:
                </h3>
                <textarea name="Body" cols="70" rows="10">@Model.Body</textarea>
            </div>
            <input type="submit" value="Update">
        </form>
    </div>
    <div class="col">
        <div class="list-group">
            @foreach (var step in Model.Article.Steps)
            {
                if (step.Id != Model.Id)
                {
                    <a asp-controller="Manage" asp-action="UpdateStep" asp-route-id="@step.Id" class="list-group-item list-group-item-action">@(i++). @step.Name</a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="UpdateStep" asp-route-id="@step.Id" class="list-group-item list-group-item-action active">@(i++). @step.Name</a>
                }
            }
        </div>
        <a asp-controller="Manage" asp-action="UpdateArticle" asp-route-id="@Model.Article.Id" class="btn-block">Article: @(Model.Article.Name)</a>
    </div>
</div>

