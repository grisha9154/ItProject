@using ItProject.Models.ArticleModels
@model List<ArticleModel>
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Article);
}

<h2>CreateArticle</h2>

<div class="row">
    <div class="col">
        <form action="../Manage/CreateArticle" method="post">

            <div class="form-group">
                <h3>
                    Name:
                </h3>
                <input name="Name" type="text"/>
            </div>
            <div class="form-group">
                <h3>
                    Description:
                </h3>
                <textarea name="Description" cols="70" rows="10"></textarea>
            </div>
            <div class="form-group">
                <h3>
                    Theme:
                </h3>
                <input name="Theme" type="text">
            </div>
            <div class="form-group">
                <h3>
                    Tags:
                </h3>
                <input name="Tags" type="text">
            </div>
            <input type="submit" value="Update">
        </form>
    </div>
</div>

